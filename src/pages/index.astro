---
import BaseLayout, { type BaseLayoutProps } from "@/layouts/BaseLayout.astro";
import cdnify from "@/lib/cdnify";
import cn from "@/lib/cn";
import hashSlug from "@/lib/hashSlug";
import sortByLatest from "@/lib/sortByLatest";
import { getCollection } from "astro:content";

const pageMetaData = {
    title: "",
    description: "Xenitane's Project Archive",
    keywords: ["portfolio", "xenitane", "projects", "programming", "mathematics", "coding"],
} satisfies BaseLayoutProps;

const projects = (await getCollection("project")).sort(sortByLatest);
---

<BaseLayout {...pageMetaData}>
    <h1 id="title" class="flex items-center py-4 text-3xl font-bold">My Projects</h1>
    {
        0 === projects.length ? (
            <div
                class={cn(
                    "flex h-24 w-full items-center justify-center rounded-lg bg-neutral-100/70 p-4 text-lg font-semibold italic",
                    "dark:bg-neutral-900/70"
                )}
            >
                Working on stuff, will post here soon&hellip;
            </div>
        ) : (
            <div class="flex flex-col gap-4">
                {projects.map(function (
                    {
                        data: {
                            metaContent: { heroImage, title, description },
                            version,
                            techStack,
                        },
                        slug,
                    },
                    idx
                ) {
                    const textSide = (idx & 1) === 1;
                    return (
                        <div
                            class={cn(
                                "flex w-full flex-col gap-4 overflow-hidden rounded-2xl bg-neutral-100/70 p-4",
                                {
                                    "lg:flex-row": !textSide,
                                    "lg:flex-row-reverse": textSide,
                                },
                                "dark:bg-neutral-900/70"
                            )}
                        >
                            <div
                                class={cn(
                                    "flex aspect-video w-full items-center justify-center overflow-hidden rounded-xl border border-neutral-300",
                                    "md:border-2",
                                    "lg:w-2/3",
                                    "dark:border-neutral-700"
                                )}
                            >
                                <img
                                    src={cdnify(heroImage)}
                                    alt={`hero-image-${slug}`}
                                    class="min-h-full min-w-full object-cover grayscale"
                                />
                            </div>
                            <div class={cn("flex flex-col gap-2 p-2", "md:gap-4 md:p-4", "lg:w-1/3")}>
                                <h3 class="h-min flex-[unset_1_min-content] overflow-hidden text-xl font-bold tracking-tight text-nowrap text-ellipsis">
                                    {title}
                                    <sup>{version}</sup>
                                </h3>
                                <ul class="flex flex-wrap gap-2 text-sm">
                                    {techStack.map(function (tech) {
                                        return (
                                            <li class={cn("rounded-full bg-neutral-200 px-2 py-1", "dark:bg-neutral-800")}>
                                                {tech}
                                            </li>
                                        );
                                    })}
                                </ul>
                                <p>
                                    {description.slice(0, 80)}
                                    {description.length > 80 && "\u2026"}
                                </p>
                                <a
                                    href={`/${hashSlug(slug)}`}
                                    class={cn(
                                        "mt-auto w-fit rounded-xl bg-neutral-200 px-4 py-2 text-nowrap",
                                        {
                                            "md:ml-auto": !textSide,
                                            "md:mr-auto": textSide,
                                        },
                                        "dark:bg-neutral-800"
                                    )}
                                >
                                    Read More
                                </a>
                            </div>
                        </div>
                    );
                })}
            </div>
        )
    }
</BaseLayout>
